<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		tools:context="com.liferay.raysbanking.MainActivity">

		<android.support.constraint.ConstraintLayout
			android:id="@+id/hello_text_container"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="24dp"
			android:layout_marginLeft="24dp"
			android:layout_marginRight="24dp"
			android:layout_marginStart="24dp"
			android:layout_marginTop="20dp"
			android:background="@drawable/container_background"
			android:padding="24dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<TextView
				android:id="@+id/hello_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#36444e"
				android:textSize="18sp"
				android:textStyle="bold"
				tools:layout_editor_absoluteX="0dp"
				tools:layout_editor_absoluteY="0dp"
				tools:text="Recebemos suas informações e estamos fazendo a sua análise de crédito. Fique ligado que você vai
receber uma resposta logo. \nAgradecemos seu interesse pelo Ray’s Bank."/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/hands"
				app:layout_constraintBottom_toBottomOf="@id/hello_text"

				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

		</android.support.constraint.ConstraintLayout>

		<ImageButton
			android:id="@+id/imageButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:background="@drawable/container_background"
			app:layout_constraintHorizontal_chainStyle="spread_inside"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:paddingLeft="64dp"
			android:paddingRight="64dp"
			app:layout_constraintLeft_toLeftOf="@+id/hello_text_container"
			app:layout_constraintRight_toLeftOf="@+id/imageButton2"
			app:layout_constraintTop_toBottomOf="@+id/hello_text_container"
			app:srcCompat="@drawable/ic_calendar" android:layout_marginLeft="0dp"/>

		<ImageButton
			android:id="@+id/imageButton2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/container_background"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:paddingLeft="64dp"
			android:paddingRight="64dp"
			app:layout_constraintLeft_toRightOf="@+id/imageButton"
			app:layout_constraintRight_toRightOf="@+id/hello_text_container"
			app:layout_constraintTop_toTopOf="@+id/imageButton"
			app:srcCompat="@drawable/ic_show_chart" android:layout_marginTop="0dp"
			android:layout_marginRight="0dp"/>



		<ImageButton
			android:id="@+id/imageButton3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:background="@drawable/container_background"
			app:layout_constraintHorizontal_chainStyle="spread_inside"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:paddingLeft="64dp"
			android:paddingRight="64dp"
			app:layout_constraintLeft_toLeftOf="@+id/hello_text_container"
			app:layout_constraintRight_toLeftOf="@+id/imageButton4"
			app:layout_constraintTop_toBottomOf="@+id/imageButton"
			app:srcCompat="@drawable/ic_message" android:layout_marginLeft="0dp"/>

		<ImageButton
			android:id="@+id/imageButton4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/container_background"
			android:paddingTop="30dp"
			android:paddingBottom="30dp"
			android:paddingLeft="64dp"
			android:paddingRight="64dp"
			app:layout_constraintLeft_toRightOf="@+id/imageButton3"
			app:layout_constraintRight_toRightOf="@+id/hello_text_container"
			app:layout_constraintTop_toTopOf="@+id/imageButton3"
			app:srcCompat="@drawable/ic_settings"
			android:layout_marginTop="0dp"
			android:layout_marginRight="0dp"/>

	</android.support.constraint.ConstraintLayout>
</layout>